<script>
    class Menu {
        constructor(element) {
            this.menu = {
                element: element
            };
            this.menu.toggle = document.querySelector('.menu-toggle');
            this.menu.toggle.addEventListener('click', () => this.handleMenu());
            this.menu.menuLinks = document.querySelectorAll('nav .menu-link');
        }

        handleMenu() {
            let elem = this.menu.element;
            let action = !this.menu.element.classList.contains('menu-visible') ? 'add' : 'remove';
            
            if (action == 'add') {
                elem.classList.add('menu-visible', 'move-in');
                setTimeout(() => {
                    elem.classList.add('menu-move');
                }, 100);
            } else {
                elem.classList.remove('move-in');
                elem.classList.add('move-out');
                elem.classList.remove('menu-move');
                setTimeout(() => {
                    elem.classList.remove('menu-visible', 'move-out');
                }, 600);
            }
        }
    }

    const navMenu = new Menu(document.querySelector('nav'));
</script>