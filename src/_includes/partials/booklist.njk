<h1 class="page-title">Bookshelf</h1>
<div class="bookshelf">
{% for book in booklist %}
    <article class="book-on-shelf">
        <a href="{{ book.review }}" target="_blank">
            <img src="{{ book.cover }}" alt="{{ book.title }} book cover by {{ book.author }}">
            <div class="book-details">
                <h3>{{ book.title }}</h3>
                <p class="author">{{ book.author }}</p>
            </div>
            {% if book.reading %}
            <p class="reading">Reading now</p>
            {% else %}
            <div class="rating-and-link">
                <p class="rating">
                    {% for star in book.rating %}<span><i class="fa-solid fa-star"></i></span>{% endfor %}
                </p>
                <span class="link-icon"><i class="fa-solid fa-link"></i></span>
            </div>
            {% endif %}
        </a>
    </article>
{% endfor %}
</div>