{% extends 'layouts/layout.njk' %}

{% block content %}
<main>
    {% for post in posts %}
        <article>
            <h1>{{ post.title }}</h1>
            <time>{{ post.published }}</time>
            <a href="/posts/{{ post.title | slug }}">Read the post</a>
        </article>
    {% endfor %}
</main>
{% endblock %}